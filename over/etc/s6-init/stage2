#!/usr/bin/execlineb -P
foreground { echo "* stage2 started." }

foreground {
  cd /etc/s6/ok
  elglob -0 files contents.d/*
  redirfd -w 1 contents
  redirfd -r 0 /dev/null
  cat $files
}

foreground {
  cd /etc/s6-rc
  if -n { test -e compiled }
  if {
    backtick -in dest { readlink compiled }
    import -u dest
    s6-rc-compile $dest /etc/s6
  }
  echo "* s6-rc db recompiled."
}

if { s6-rc-init /run/s6 }
s6-rc -u change ok
